import java.util.Random;
import java.util.Scanner;

public class NumberGuessingGame {
    public static void main(String[] args) {
        Scanner scanner = new Scanner(System.in);
        Random random = new Random();
        int lowerBound = 1, upperBound = 100, maxAttempts = 7;
        int roundsWon = 0;
        
        System.out.println("ğŸ® Welcome to the Number Guessing Game! ğŸ¯");

        while (true) {
            int secretNumber = random.nextInt(upperBound - lowerBound + 1) + lowerBound;
            int attempts = 0;
            boolean guessedCorrectly = false;

            System.out.println("\nNew Round: Guess the number between " + lowerBound + " and " + upperBound);

            while (attempts < maxAttempts) {
                System.out.print("Attempt " + (attempts + 1) + "/" + maxAttempts + " - Enter your guess: ");
                
                if (!scanner.hasNextInt()) {
                    System.out.println("âŒ Invalid input! Please enter a number.");
                    scanner.next(); // Clear invalid input
                    continue;
                }

                int guess = scanner.nextInt();
                attempts++;

                if (guess < secretNumber) {
                    System.out.println("ğŸ“‰ Too low! Try again.");
                } else if (guess > secretNumber) {
                    System.out.println("ğŸ“ˆ Too high! Try again.");
                } else {
                    System.out.println("ğŸ‰ Correct! You guessed the number in " + attempts + " attempts.");
                    roundsWon++;
                    guessedCorrectly = true;
                    break;
                }
            }

            if (!guessedCorrectly) {
                System.out.println("ğŸ’€ Out of attempts! The correct number was " + secretNumber + ".");
            }

            System.out.println("ğŸ† Your score: " + roundsWon + " rounds won.");

            System.out.print("\nDo you want to play again? (yes/no): ");
            String playAgain = scanner.next().trim().toLowerCase();
            if (!playAgain.equals("yes")) {
                System.out.println("Thanks for playing! Final Score: " + roundsWon);
                break;
            }
        }

        scanner.close();
    }
}
